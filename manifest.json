{
  "manifest_version": 3,
  "name": "Content validator",
  "version": "1.0.0",
  "description": "Checks the page content with writer document content",
  "icons": {
    "16": "./img/cv-logo.png",
    "32": "./img/cv-logo.png",
    "48": "./img/cv-logo.png",
    "128": "./img/cv-logo.png"
  },

  "action": {
    "default_icon": "./img/cv-logo.png",
    "default_title": "Content validator"
  },

  "background": {
    "service_worker": "background.js"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": ["./content-script/content-script.css"],
      "js": [
        "./content-script/view/popup.js",
        "./content-script/content-script.js",
        "./result-popup.js",
        "./fast-diff.js",
        "./correction-popup.js",
        "./functionality-main.js",
        "./diff-checker.js",
        "./compare-string.js"
      ]
    }
  ],

  "permissions": ["storage", "tabs"],

  "web_accessible-resources": [
    {
      "resources": ["./img/cv-logo.png"],
      "matches": ["<all_urls>"]
    }
  ]
}
